<div class="container">
  <div class="burgerImage"></div>
  
  <div class="burgerForm">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>

      <button id="newBurger" type="submit">Add Burger</button>
      
    </form>
    </div>
    <div class="flex-container">
      <div class="eating">
        <h2>Bugers for eating!</h2>

        <ul>
          {{#each burger}}
            {{#unless devoured}}
              <ul>
              <li>{{ this.name }}</li>
              <button class="devoured" type="submit" data-id="{{this.id}}">Devour</button>
              </ul>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="devoured">
        <h2>Devoured!</h2>

        <ul>
          {{#each burger}}
            {{#if devoured}}
            <ul>
            <li>{{ this.name }}</li>
            </ul>
              
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
</div>